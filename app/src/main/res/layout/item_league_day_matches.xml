<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:background="@drawable/bg_fiolet_radius"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvGameDataItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="15 October, 2015"
        android:textColor="#B3FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGameTimeItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14:00"
        android:textColor="#B3FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/tvGameDataItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvGameDataItem" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGameDataItem">

        <ImageView
            android:id="@+id/imgDayMatchTeam1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/liverpool" />

        <TextView
            android:id="@+id/tvDayMatchTeam1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingStart="4dp"
            android:gravity="center|start"
            android:textStyle="bold"
            android:text="TextView" />

        <TextView
            android:id="@+id/tvDayMatchTeam2"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingEnd="4dp"
            android:gravity="center|end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="TextView" />

        <ImageView
            android:id="@+id/imgDayMatchTeam2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/liverpool" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>