<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_league_bg"
    android:padding="10dp"
    android:id="@+id/itemLeagueContainer"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvLeagueName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_b"
        android:textSize="15sp"
        android:paddingVertical="10dp"
        android:text="@string/campeonato_brasileiro_s_rie_a" />

    <TextView
        android:id="@+id/tvLeagueCountGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:paddingHorizontal="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_b"
        android:text="@string/_5" />

    <ImageView
        android:id="@+id/imgLeagueDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_next" />

</androidx.appcompat.widget.LinearLayoutCompat>